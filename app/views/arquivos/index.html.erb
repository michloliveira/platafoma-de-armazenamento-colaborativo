        <% end %>
        <%= button_to download_arquivo_url(arquivo), method: :get, class:'icon-button' do %>
          <i class="fa fa-download"></i>
        <% end %>
        <%= button_to arquivo, method: :delete, data: { confirm: 'Are you sure?' }, class:'icon-button' do %>
