<%= form_with(model: arquivo, local: true) do |form| %>
  <% if arquivo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(arquivo.errors.count, "error") %> prohibited this arquivo from being saved:</h2>

      <ul>
      <% arquivo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class='page-content-card'>
    <div class='form-field-upload'>
      <%if arquivo.image.present?%>
      <%= image_tag arquivo.image_url%>
      <% end %>
      <%= form.label :image %>
      <%= form.hidden_field :image, value: arquivo.cached_image_data %>
      <%= form.file_field :image %>
    </div>

    <div class="form-field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-field-select">
      <%= form.label :Crypto_Type%>
      <%= form.select :cripto_tipo, ['Remove Line', 'Caesar', 'AES']%>
    </div>

    <div class="form-field-actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
